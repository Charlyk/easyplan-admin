{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "*": [
        "*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "./app/@types",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "app",
    "pages",
    "middleware",
    "redux",
    "public"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
